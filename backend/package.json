{
  "name": "cart-server",
  "version": "1.0.0",
  "description": "Secure shopping cart GraphQL API server",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\"",
    "test": "NODE_ENV=test jest --coverage --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:silent": "NODE_ENV=test SILENT_TESTS=true jest --coverage --forceExit",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/(database|resolvers).test.js --forceExit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/graphql.integration.test.js --forceExit --runInBand"
  
  },
  "keywords": [
    "cart",
    "graphql",
    "api",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^10.0.2",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
